<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/back">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_weight="0.43"
        android:id="@+id/edit_layout">

        <RadioButton
            android:text="HELP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditHelp"
            android:button="@android:drawable/presence_online"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ab"
            android:id="@+id/imageView7"
            android:layout_weight="0.32"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/MenuHelp"
            android:layout_toLeftOf="@+id/MenuHelp" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Recipe Name"
        android:ems="10"
        android:id="@+id/RecipeTitle"
        android:layout_weight="0.08" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your Description"
        android:ems="10"
        android:id="@+id/RecipeDescription"
        android:layout_weight="0.27" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:weightSum="1"
        android:layout_weight="0.06">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Time Used In Minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Time"
                android:layout_weight="0.07"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter Time"
                android:ems="10"
                android:id="@+id/timeEdit" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="0.31">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Calories"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/calorieValue"
                    android:text="enter calories"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:text="Protein"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="enter protein"
                    android:ems="10"
                    android:id="@+id/proteinValue"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="1.15">

                <TextView
                    android:text="Carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView14"
                    android:layout_weight="1.07"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="enter carbs"
                    android:ems="10"
                    android:id="@+id/carbsValue"
                    android:textSize="10sp"
                    android:layout_weight="0.43" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:text="Fat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fats"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_weight="0.92"/>

                <EditText
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="enter fat"
                    android:ems="10"
                    android:id="@+id/fatValue"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:id="@+id/TypeCAt">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Category"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:id="@+id/textView16"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textAllCaps="false"
                android:layout_weight="0.90" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter Category"
                android:ems="10"
                android:id="@+id/RecipeCategory"
                android:textSize="10sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Type"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/textView15"
                android:textColor="@android:color/background_dark"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Enter Type"
                android:ems="10"
                android:id="@+id/RecipeType"
                android:textSize="10sp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:text="Steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToSteps"
            android:layout_weight="0.83"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Ingredients"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:id="@+id/goToIngredients"
            android:layout_weight="0.09"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0.11">

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cancelButton"
            android:layout_weight="1.00"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/deleteButton"
            android:layout_weight="1.00"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/saveButton"
            android:layout_weight="1.00"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>
