<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nothing.recipefinder.MainActivity"
    android:background="@drawable/board1"
    >

    <TextView
        android:text="Cutting Board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview2"
        android:fontFamily="cursive"
        android:textSize="52sp"
        android:textAllCaps="false"
        android:textColor="?android:attr/actionMenuTextColor"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:background="@drawable/back"/>

    <Button
        android:text="Go To Recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterlist1"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="goToRecipe"
        android:background="@drawable/buttonback"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:weightSum="1"
        android:layout_marginTop="55dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textview2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="215dp"
            app:srcCompat="@drawable/drankn"
            android:id="@+id/imageView2"
            android:layout_weight="0.02" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/steak"
            android:id="@+id/imageView5"
            android:layout_weight="0.68" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fork"
            android:id="@+id/imageView3"
            android:layout_weight="0.13" />

    </LinearLayout>

    <RadioButton
        android:text="HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MenuHelp"
        android:button="@android:drawable/presence_online"
        android:layout_below="@+id/enterlist1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
